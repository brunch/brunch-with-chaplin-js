@import 'nib'

.header
  width: 551px
  margin: 0 auto
  padding: 5px
  font-size: 24px
  background-color: #fff
  border-bottom: 2px solid #427684
  font-weight: 300
  font-size: 1.25rem
  line-height: 1.2

  &-link
    display: inline-block
    text-decoration: none
    color: #3f894a
    padding: 4px 15px

    &.last-link
      padding-left: 9px;

    &:visited
      color: #3f894a

    &:hover
      color: #27552e
      border-color: #27552e
  ul
    margin: 5px 0
  li
    display: inline
